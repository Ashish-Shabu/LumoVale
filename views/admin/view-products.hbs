<section>
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    {{#each products}}
                    <th scope="row">{{this.name}}</th>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style= "width: 50px; height: 50px;" src= "{{this.imageLink}}"></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>