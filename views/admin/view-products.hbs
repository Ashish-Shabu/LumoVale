<section>
    <div class="container">
        <div class="row mt-4">
            <div class="col text-end">
                <a href="/admin/add-products" class="btn btn-success">Add Products</a>
            </div>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this.name}}</th>
                    <td>{{this.price}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg"></td>
                    <td style="width: 100px; text-align: center; vertical-align: middle;">
                        <div style="display: inline-flex; gap: 10px; align-items: middle; justify-content: middle;">
                            <a href="/admin/edit-product/{{this._id}}" title="Edit">
                                <i class="fa-solid fa-pen-to-square" style="color: #007bff;"></i>
                            </a>
                            <a href="/admin/delete-product/{{this._id}}" title="Delete" onclick= "return confirm('Are You Sure You Want To Delete {{this.name}}?')">
                                <i class="fa-solid fa-trash" style="color: #f20202;"></i>
                            </a>
                        </div>
                    </td>


                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>