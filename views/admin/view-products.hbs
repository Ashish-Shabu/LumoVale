<section>
    <div class="container">
        <div class="row mt-4">
            <div class="col text-end">
                <a href="/admin/add-products" class="btn btn-success">Add Products</a>
            </div>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">{{this.name}}</th>
                    <td>{{this.price}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                    <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg"></td>
                    <td style="display: flex; gap: 10px; align-items: center; justify-content: center; fill: #000;">
                        <a href="/admin/edit-product/{{this._id}}" ><i class="fa-solid fa-pen-to-square"></i></a>
                        <a href="/admin/delete-product/{{this._id}}" ><i class="fa-solid fa-trash" style="color: #f20202;"></i></i></a>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>