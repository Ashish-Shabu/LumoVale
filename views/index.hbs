<section>
  <div class="container">
    <div class="row">
      {{#each products}}

      <div class="col-md-3">
        <a href="#">
          <div class="card" style="width: 18rem;">
            <img src="{{this.image}}" class="card-img-top" alt="product image" />
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.description}}</p>
            </div>
          </div>
        </a>
      </div>

      {{/each}}
    </div>
  </div>
</section>